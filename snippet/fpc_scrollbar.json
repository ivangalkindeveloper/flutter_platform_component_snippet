      "import 'package:flutter/widgets.dart';",
      "",
      "class ${name}Scrollbar extends StatelessWidget {",
      "  const ${name}Scrollbar({",
      "    super.key,",
      "    required this.child,",
      "  });",
      "",
      "  final Widget child;",
      "",
      "  @override",
      "  Widget build(BuildContext context) {",
      "    return FPCScrollbar(",
